        }
        
        function showNewSectionForm() {
            document.getElementById('newSectionForm').style.display = 'block';
            document.getElementById('sectionName').value = '';
            document.getElementById('sectionType').value = '';
            document.getElementById('sectionContent').value = '';
        }
        
        function cancelNewSection() {
            document.getElementById('newSectionForm').style.display = 'none';
        }
        
        function createWebsiteSection() {
            const name = document.getElementById('sectionName').value;
            const type = document.getElementById('sectionType').value;
            let content = '';
            
            if (!name || !type) {
                alert('Please fill in all required fields');
                return;
            }
            
            if (type === 'text' || type === 'form') {
                content = document.getElementById('sectionContent').value;
                if (!content) {
                    alert('Please provide content for this section');
                    return;
                }
            } else {
                // For file uploads, we would handle the files in a real app
                content = "File upload would be processed here";
            }
            
            // In a real app, this would send to server
            const newSection = {
                id: Math.max(...websiteSections.map(s => s.id), 0) + 1,
                name: name,
                type: type,
                status: "active",
                lastUpdated: new Date().toLocaleDateString(),
                content: content
            };
            
            websiteSections.push(newSection);
            loadWebsiteSections();
            document.getElementById('newSectionForm').style.display = 'none';
            alert('Website section created successfully!');
        }
        
