        }
        
        // Volunteer map functions
        function initVolunteerMap() {
            if (!volunteerMap) {
                volunteerMap = L.map('volunteerMap').setView([13.7563, 121.0583], 10); // Default to Batangas coordinates
                
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                }).addTo(volunteerMap);
                
                // Add markers for volunteers
                approvedVolunteers.forEach(volunteer => {
                    // In a real app, we would use actual coordinates from volunteer check-ins
                    const randomOffset = () => (Math.random() - 0.5) * 0.2;
                    const lat = 13.7563 + randomOffset();
                    const lng = 121.0583 + randomOffset();
                    
                    L.marker([lat, lng]).addTo(volunteerMap)
                        .bindPopup(`<b>${volunteer.firstName} ${volunteer.lastName}</b><br>${volunteer.skills.join(', ')}`);
                });
            }
        }
        
        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('applicationModal');
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
