        // Map variable
        let volunteerMap;

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            loadPendingApplications();
            loadAnnouncements();
            loadAdminAccounts();
            loadWebsiteSections();
            
            // Show "Other" field when "Others" is selected
            document.getElementById('appVolunteerType').addEventListener('change', function() {
                const otherField = document.getElementById('appVolunteerTypeOther');
                otherField.style.display = this.value === 'other' ? 'block' : 'none';
                if (this.value !== 'other') otherField.value = '';
            });
            
            // Show appropriate fields based on section type
            document.getElementById('sectionType').addEventListener('change', function() {
                const contentGroup = document.getElementById('sectionContentGroup');
                const fileGroup = document.getElementById('sectionFileGroup');
                
                if (this.value === 'text' || this.value === 'form') {
                    contentGroup.style.display = 'block';
                    fileGroup.style.display = 'none';
                } else {
                    contentGroup.style.display = 'none';
                    fileGroup.style.display = 'block';
                }
            });
        });

        // Login function with specific admin credentials
        function login() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if(username === 'Admin' && password === 'MDRM') {
                showAdminView();
            } else if(username === 'volunteer1' && password === 'Volunteer@123') {
                // Sample volunteer login
                const volunteer = approvedVolunteers.find(v => v.username === 'juandelacruz');
                showVolunteerView(volunteer);
            } else if(username && password) {
                // Check if this is an approved volunteer
                const volunteer = approvedVolunteers.find(v => v.username === username);
                if (volunteer) {
                    showVolunteerView(volunteer);
                } else {
                    alert('Invalid credentials or your application is still pending approval');
                }
            } else {
                alert('Please enter both username and password');
            }
        }
        
        function showAdminView() {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('applicationForm').style.display = 'none';
            document.getElementById('adminDashboard').style.display = 'block';
            document.getElementById('volunteerDashboard').style.display = 'none';
            document.getElementById('logoutBtn').style.display = 'block';
            
            loadPendingApplications();
            loadAnnouncements();
            loadAdminAccounts();
            loadWebsiteSections();
            initVolunteerMap();
        }
        
        function showVolunteerView(volunteer) {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('applicationForm').style.display = 'none';
            document.getElementById('adminDashboard').style.display = 'none';
            document.getElementById('volunteerDashboard').style.display = 'block';
            document.getElementById('logoutBtn').style.display = 'block';
            
            // Populate volunteer info
            document.getElementById('volunteerName').textContent = `${volunteer.firstName} ${volunteer.lastName}`;
            document.getElementById('volunteerContact').textContent = `Email: ${volunteer.email} | Phone: ${volunteer.contact}`;
            document.getElementById('volunteerSkills').textContent = `Skills: ${volunteer.skills.join(', ')}`;
            document.getElementById('volunteerLocation').textContent = `Location: ${volunteer.location}`;
            document.getElementById('volunteerStatus').textContent = `Status: ${volunteer.status.charAt(0).toUpperCase() + volunteer.status.slice(1)}`;
            document.getElementById('currentVolunteerPic').src = volunteer.profilePic;
            
            // Load announcements for volunteers
            loadVolunteerAnnouncements();
            getLocation();
        }
        
        function showApplicationForm() {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('applicationForm').style.display = 'block';
        }
        
        function hideApplicationForm() {
            document.getElementById('applicationForm').style.display = 'none';
            document.getElementById('loginPage').style.display = 'block';
        }
        
        function logout() {
            document.getElementById('loginPage').style.display = 'block';
            document.getElementById('applicationForm').style.display = 'none';
            document.getElementById('adminDashboard').style.display = 'none';
            document.getElementById('volunteerDashboard').style.display = 'none';
            document.getElementById('logoutBtn').style.display = 'none';
            
            // Clear form fields
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
        }
        
        // File upload preview for certificates
        document.getElementById('appCertificates').addEventListener('change', function(e) {
            const preview = document.getElementById('certificatePreview');
            preview.innerHTML = '';
            
            if (this.files.length > 0) {
                const file = this.files[0];
                if (file.size > 100 * 1024 * 1024) {
                    alert('File size exceeds 100MB limit');
                    this.value = '';
                    return;
                }
                
                preview.innerHTML = `
                    <div style="padding: 10px; background: #f5f5f5; border-radius: 4px;">
                        <i class="file-icon">📄</i> ${file.name} (${(file.size/1024/1024).toFixed(1)}MB)
                    </div>
                `;
            }
        });

        // Profile picture preview
        document.getElementById('appProfilePic').addEventListener('change', function(e) {
            const preview = document.getElementById('profilePicPreview');
            if (this.files.length > 0) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
        
        function loadPendingApplications() {
            const tableBody = document.getElementById('applicationsTable');
            tableBody.innerHTML = '';
            
            pendingApplications.forEach(app => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${app.date}</td>
                    <td>${app.firstName} ${app.lastName}</td>
                    <td>${app.contact}<br>${app.email}</td>
                    <td>${getVolunteerTypeLabel(app.volunteerType)}</td>
                    <td>
                        <button class="action-btn view-btn" onclick="viewApplication(${app.id})">View Application</button>
                        <button class="action-btn approve-btn" onclick="approveApplication(${app.id})">Approve</button>
                        <button class="action-btn reject-btn" onclick="rejectApplication(${app.id})">Reject</button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        }
        
        function getVolunteerTypeLabel(value) {
            const options = {
                'medical': 'First aid and medical assistance',
                'rescue': 'Search and rescue operations',
                'relief': 'Relief goods preparation and distribution',
                'education': 'Information and education campaigns',
                'evacuation': 'Evacuation center management',
                'environmental': 'Environmental cleanup and rehabilitation',
                'assessment': 'Risk assessment and hazard mapping',
                'other': 'Others'
            };
            return options[value] || value;
        }
        
        function viewApplication(appId) {
            const app = pendingApplications.find(a => a.id === appId);
            if (!app) return;
            
            const modalContent = document.getElementById('modalContent');
            modalContent.innerHTML = `
                <h2>Volunteer Application #${app.id}</h2>
                <div style="display:flex;gap:20px;margin-bottom:20px;">
                    <img src="${app.profilePic}" style="width:120px;height:120px;border-radius:50%;object-fit:cover;">
                    <div>
                        <h3>${app.firstName} ${app.middleName ? app.middleName + ' ' : ''}${app.lastName}</h3>
                        <p><strong>Email:</strong> ${app.email}</p>
                        <p><strong>Contact:</strong> ${app.contact}</p>
                        <p><strong>Address:</strong> ${app.address}</p>
                        <p><strong>Date of Birth:</strong> ${app.birthdate}</p>
                    </div>
                </div>
                
                <div style="margin-bottom:20px;">
                    <h3>Education and Employment</h3>
                    <p><strong>Highest Education:</strong> ${document.getElementById('appEducation').options[document.getElementById('appEducation').selectedIndex].text}</p>
                    <p><strong>Occupation:</strong> ${app.occupation || 'Not specified'}</p>
                    <p><strong>Employer:</strong> ${app.employer || 'None'}</p>
                </div>
                
                <div style="margin-bottom:20px;">
                    <h3>Volunteer Preferences</h3>
                    <p><strong>Preferred Activity:</strong> ${getVolunteerTypeLabel(app.volunteerType)}</p>
                    <p><strong>Transportation:</strong> ${app.transportation || 'Not specified'}</p>
                    <p><strong>Years of Experience:</strong> ${app.experience}</p>
                    <p><strong>Availability:</strong> ${app.availability}</p>
                    <p><strong>Commitment:</strong> ${app.commitment === 'yes' ? 'Yes' : 'No'}</p>
                </div>
                
                <div style="margin-bottom:20px;">
                    <h3>Training Certificates</h3>
                    <div style="display:flex;flex-wrap:wrap;gap:10px;">
                        ${app.certificates.map(cert => `
                            <div style="border:1px solid #ddd;padding:10px;border-radius:4px;">
                                <div style="height:100px;background:#f5f5f5;display:flex;align-items:center;justify-content:center;margin-bottom:5px;">
                                    ${cert.name.endsWith('.pdf') ? 
                                        '<span>PDF Document</span>' : 
                                        `<img src="https://via.placeholder.com/100x100?text=Certificate" style="max-height:100%;max-width:100%;">`}
                                </div>
                                <div>${cert.name}</div>
                            </div>
                        `).join('')}
                    </div>
                </div>
                
                <div style="margin-bottom:20px;">
                    <h3>Account Information</h3>
                    <p><strong>Username:</strong> ${app.username}</p>
                </div>
            `;
            
            document.getElementById('applicationModal').style.display = 'block';
        }
        
        function closeModal() {
            document.getElementById('applicationModal').style.display = 'none';
        }
        
        function approveApplication(appId) {
            const app = pendingApplications.find(a => a.id === appId);
            if (!app) return;
            
            // In a real app, this would send to server
            approvedVolunteers.push({
                id: Math.max(...approvedVolunteers.map(v => v.id), 0) + 1,
                firstName: app.firstName,
                lastName: app.lastName,
                email: app.email,
                contact: app.contact,
                skills: [getVolunteerTypeLabel(app.volunteerType)],
                location: app.address.split(',')[1]?.trim() || app.address,
                profilePic: app.profilePic,
                status: "active",
                username: app.username,
                lastActive: new Date().toLocaleString()
            });
            
            pendingApplications = pendingApplications.filter(a => a.id !== appId);
            loadPendingApplications();
            alert(`Application #${appId} approved successfully!`);
            closeModal();
        }
        
        function rejectApplication(appId) {
            // In a real app, this would send to server
            pendingApplications = pendingApplications.filter(a => a.id !== appId);
            loadPendingApplications();
            alert(`Application #${appId} has been rejected.`);
            closeModal();
        }
        
        function showTab(tabId) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.style.display = 'none';
            });
            
            // Show selected tab
            document.getElementById(tabId).style.display = 'block';
            
            // Update active button
            document.querySelectorAll('.dashboard-nav button').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Initialize map if showing volunteer map tab
            if (tabId === 'volunteer-map') {
                initVolunteerMap();
            }
        }
        
        function getLocation() {
            if(navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition, showError);
            } else {
                document.getElementById('volunteerLocationInput').value = "Geolocation not supported";
            }
        }
        
        function showPosition(position) {
            const lat = position.coords.latitude;
            const lng = position.coords.longitude;
            
            // In a real app, you would reverse geocode these coordinates to get an address
            document.getElementById('volunteerLocationInput').value = `Lat: ${lat.toFixed(4)}, Lng: ${lng.toFixed(4)}`;
        }
        
        function showError(error) {
            switch(error.code) {
                case error.PERMISSION_DENIED:
                    document.getElementById('volunteerLocationInput').value = "Location access denied";
                    break;
                case error.POSITION_UNAVAILABLE:
                    document.getElementById('volunteerLocationInput').value = "Location unavailable";
                    break;
                case error.TIMEOUT:
                    document.getElementById('volunteerLocationInput').value = "Location request timeout";
                    break;
                default:
                    document.getElementById('volunteerLocationInput').value = "Unknown location error";
            }
        }
        
        function submitApplication() {
            // Validate form
            const username = document.getElementById('appUsername').value;
            const password = document.getElementById('appPassword').value;
            const confirmPassword = document.getElementById('appConfirmPassword').value;
            
            if (!/^[a-zA-Z0-9]+$/.test(username)) {
                alert('Username must be alphanumeric (letters and numbers only, no spaces)');
                return;
            }
            
            if (password.length < 8) {
                alert('Password must be at least 8 characters long');
                return;
            }
            
            if (!/(?=.*[a-zA-Z])(?=.*[0-9])/.test(password)) {
                alert('Password must contain both letters and numbers');
                return;
            }
            
            if (password !== confirmPassword) {
                alert('Passwords do not match');
                return;
            }
            
            if (!document.getElementById('appAgreement').checked) {
                alert('You must certify that all information is accurate and complete');
                return;
            }
            
            // In a real app, this would submit to a server
            alert('Application submitted successfully! Please wait for admin approval.');
            hideApplicationForm();
        }
        
        function submitCheckin() {
            alert('Check-in successful! Thank you for volunteering.');
            // In a real app, this would submit to a server
        }
        
        function updateProfilePic(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('currentVolunteerPic').src = e.target.result;
                    alert('Profile picture updated successfully!');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        
        // Password strength checker
        function checkPasswordStrength(password, meterId = 'passwordStrength', hintId = 'passwordHint') {
            let strength = 0;
            const meter = document.getElementById(meterId);
            const hint = document.getElementById(hintId);
            
            // Check password length
            if (password.length >= 8) strength++;
            if (password.length >= 12) strength++;
            
            // Check for mixed case
            if (password.match(/([a-z].*[A-Z])|([A-Z].*[a-z])/)) strength++;
            
            // Check for numbers
            if (password.match(/([0-9])/)) strength++;
            
            // Check for special chars
            if (password.match(/([!,%,&,@,#,$,^,*,?,_,~])/)) strength++;
            
            // Update the meter and hint
            meter.className = 'password-meter-bar password-strength-' + strength;
            
            const strengthText = ['Very Weak', 'Weak', 'Moderate', 'Strong', 'Very Strong'];
            hint.textContent = 'Password strength: ' + strengthText[strength];
        }
        
        // Password match checker
        function checkPasswordMatch(type = 'volunteer') {
            const password = document.getElementById(type === 'admin' ? 'adminPassword' : 'appPassword').value;
            const confirmPassword = document.getElementById(type === 'admin' ? 'adminConfirmPassword' : 'appConfirmPassword').value;
            const hint = document.getElementById(type === 'admin' ? 'adminPasswordMatchHint' : 'passwordMatchHint');
            
            if (confirmPassword.length === 0) {
                hint.textContent = '';
                hint.style.color = '';
            } else if (password === confirmPassword) {
                hint.textContent = 'Passwords match!';
                hint.style.color = 'green';
            } else {
                hint.textContent = 'Passwords do not match';
                hint.style.color = 'red';
            }
        }
        
        // Announcement functions
        function loadAnnouncements() {
            const container = document.getElementById('announcementsContainer');
            container.innerHTML = '';
            
            announcements.forEach(announcement => {
                const announcementElement = document.createElement('div');
                announcementElement.className = 'announcement-card';
                announcementElement.innerHTML = `
                    <div class="announcement-header">
                        <div class="announcement-title">${announcement.title}</div>
                        <div class="announcement-date">${announcement.date}</div>
                    </div>
                    <div class="announcement-content">
                        ${announcement.content}
                    </div>
                    <div class="announcement-actions">
                        <button class="reaction-btn" onclick="addReaction(${announcement.id}, 'like')">
                            <span>👍</span> Like (${announcement.reactions.like || 0})
                        </button>
                        <button class="reaction-btn" onclick="addReaction(${announcement.id}, 'heart')">
                            <span>❤️</span> Love (${announcement.reactions.heart || 0})
                        </button>
                        <button class="reaction-btn" onclick="addReaction(${announcement.id}, 'thumbsup')">
                            <span>👍</span> Thumbs Up (${announcement.reactions.thumbsup || 0})
                        </button>
                    </div>
                    <div class="comment-section">
                        <h4>Comments (${announcement.comments.length})</h4>
                        <div class="comment-form">
                            <input type="text" class="comment-input" id="comment-${announcement.id}" placeholder="Add a comment...">
                            <button class="btn-primary" onclick="postComment(${announcement.id})">Post</button>
                        </div>
                        <div class="comment-list" id="comments-${announcement.id}">
                            ${announcement.comments.map(comment => `
                                <div class="comment-item">
                                    <div class="comment-author">${comment.author}</div>
                                    <div>${comment.content}</div>
                                    <div style="font-size:12px;color:#6c757d;">${comment.date}</div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;
                container.appendChild(announcementElement);
            });
        }
        
        function loadVolunteerAnnouncements() {
            const container = document.getElementById('volunteerAnnouncements');
            container.innerHTML = '';
            
            announcements.forEach(announcement => {
                const announcementElement = document.createElement('div');
                announcementElement.className = 'announcement-card';
                announcementElement.innerHTML = `
                    <div class="announcement-header">
                        <div class="announcement-title">${announcement.title}</div>
                        <div class="announcement-date">${announcement.date}</div>
                    </div>
                    <div class="announcement-content">
                        ${announcement.content}
                    </div>
                    <div class="announcement-actions">
                        <button class="reaction-btn" onclick="addReaction(${announcement.id}, 'like')">
                            <span>👍</span> Like (${announcement.reactions.like || 0})
                        </button>
                        <button class="reaction-btn" onclick="addReaction(${announcement.id}, 'heart')">
                            <span>❤️</span> Love (${announcement.reactions.heart || 0})
                        </button>
                        <button class="reaction-btn" onclick="addReaction(${announcement.id}, 'thumbsup')">
                            <span>👍</span> Thumbs Up (${announcement.reactions.thumbsup || 0})
                        </button>
                    </div>
                    <div class="comment-section">
                        <h4>Comments (${announcement.comments.length})</h4>
                        <div class="comment-form">
                            <input type="text" class="comment-input" id="comment-${announcement.id}" placeholder="Add a comment...">
                            <button class="btn-primary" onclick="postComment(${announcement.id})">Post</button>
                        </div>
                        <div class="comment-list" id="comments-${announcement.id}">
                            ${announcement.comments.map(comment => `
                                <div class="comment-item">
                                    <div class="comment-author">${comment.author}</div>
                                    <div>${comment.content}</div>
                                    <div style="font-size:12px;color:#6c757d;">${comment.date}</div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;
                container.appendChild(announcementElement);
            });
        }
        
        function showNewAnnouncementForm() {
            document.getElementById('newAnnouncementForm').style.display = 'block';
            document.getElementById('announcementTitle').value = '';
            document.getElementById('announcementContent').value = '';
        }
        
        function cancelAnnouncement() {
            document.getElementById('newAnnouncementForm').style.display = 'none';
        }
        
        function postAnnouncement() {
            const title = document.getElementById('announcementTitle').value;
            const content = document.getElementById('announcementContent').value;
            
            if (!title || !content) {
                alert('Please fill in both title and content');
                return;
            }
            
            // In a real app, this would send to server
            const newAnnouncement = {
                id: Math.max(...announcements.map(a => a.id), 0) + 1,
                title: title,
                content: content,
                date: new Date().toLocaleDateString(),
                author: "Admin",
                reactions: {
                    like: 0,
                    heart: 0,
                    thumbsup: 0
                },
                comments: []
            };
            
            announcements.unshift(newAnnouncement);
            loadAnnouncements();
            document.getElementById('newAnnouncementForm').style.display = 'none';
        }
        
        function addReaction(announcementId, reactionType) {
            // In a real app, this would send to server
            const announcement = announcements.find(a => a.id === announcementId);
            if (announcement) {
                announcement.reactions[reactionType] = (announcement.reactions[reactionType] || 0) + 1;
                loadAnnouncements();
                loadVolunteerAnnouncements();
            }
        }
        
        function postComment(announcementId) {
            const commentInput = document.getElementById(`comment-${announcementId}`);
            const commentText = commentInput.value.trim();
            
            if (!commentText) return;
            
            // In a real app, this would send to server
            const announcement = announcements.find(a => a.id === announcementId);
            if (announcement) {
                const newComment = {
                    id: Math.max(...announcement.comments.map(c => c.id), 0) + 1,
                    author: document.getElementById('volunteerName').textContent || "Admin",
                    content: commentText,
                    date: new Date().toLocaleString()
                };
                
                announcement.comments.push(newComment);
                commentInput.value = '';
                loadAnnouncements();
                loadVolunteerAnnouncements();
            }
        }
        
        // Admin account functions
        function loadAdminAccounts() {
            const tableBody = document.getElementById('adminAccountsTable');
            tableBody.innerHTML = '';
            
            adminAccounts.forEach(admin => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${admin.username}</td>
                    <td>${admin.firstName} ${admin.lastName}</td>
                    <td>${admin.email}</td>
                    <td>${admin.dateCreated}</td>
                    <td>
                        <button class="action-btn view-btn">View</button>
                        <button class="action-btn reject-btn">Delete</button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        }
        
        function showAdminAccountForm() {
            document.getElementById('adminAccountForm').style.display = 'block';
            document.getElementById('adminFirstName').value = '';
            document.getElementById('adminMiddleName').value = '';
            document.getElementById('adminLastName').value = '';
            document.getElementById('adminEmail').value = '';
            document.getElementById('adminUsername').value = '';
            document.getElementById('adminPassword').value = '';
            document.getElementById('adminConfirmPassword').value = '';
        }
        
        function cancelAdminAccount() {
            document.getElementById('adminAccountForm').style.display = 'none';
        }
        
        function createAdminAccount() {
            const firstName = document.getElementById('adminFirstName').value;
            const lastName = document.getElementById('adminLastName').value;
            const email = document.getElementById('adminEmail').value;
            const username = document.getElementById('adminUsername').value;
            const password = document.getElementById('adminPassword').value;
            const confirmPassword = document.getElementById('adminConfirmPassword').value;
            
            if (!firstName || !lastName || !email || !username || !password || !confirmPassword) {
                alert('Please fill in all required fields');
                return;
            }
            
            if (password !== confirmPassword) {
                alert('Passwords do not match');
                return;
            }
            
            if (password.length < 8) {
                alert('Password must be at least 8 characters long');
                return;
            }
            
            // In a real app, this would send to server
            const newAdmin = {
                id: Math.max(...adminAccounts.map(a => a.id), 0) + 1,
                username: username,
                firstName: firstName,
                lastName: lastName,
                email: email,
                dateCreated: new Date().toLocaleDateString()
            };
            
            adminAccounts.push(newAdmin);
            loadAdminAccounts();
            document.getElementById('adminAccountForm').style.display = 'none';
            alert('Admin account created successfully!');
        }
        
        // Website section functions
